<?xml version="1.0" encoding="UTF-8"?>
<extension type="plugin" group="xmap" version="1.6" method="upgrade">
    <name>Xmap - WordPress for Joomla! Plugin</name>
    <author>Steven Pignataro</author>
    <creationDate>Oct 2013</creationDate>
    <copyright>GNU GPL</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>support@corephp.com</authorEmail>
    <authorUrl>www.corephp.com</authorUrl>
    <version>3.0.0</version>
    <description>Xmap Plugin for WordPress for Joomla!</description>
    <files>
        <filename plugin="com_wordpress">com_wordpress.php</filename>
        <filename>index.html</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="include_blogpost" type="list" default="1" label="Include Blog Post" description="Include the bloggers list in the site map?">
                    <option value="0">Never</option>
                    <option value="1">Always</option>
                    <option value="2">In XML Sitemap Only</option>
                    <option value="3">In Site Sitemap Only</option>
                </field>
                <field name="blogpost_priority" type="list" default="-1" label="Blog Post Priority" description="Set the priority for blog post links">
                    <option value="-1">Use Parent Menu Settings</option>
                    <option value="0.0">0.0</option>
                    <option value="0.1">0.1</option>
                    <option value="0.2">0.2</option>
                    <option value="0.3">0.3</option>
                    <option value="0.4">0.4</option>
                    <option value="0.5">0.5</option>
                    <option value="0.6">0.6</option>
                    <option value="0.7">0.7</option>
                    <option value="0.8">0.8</option>
                    <option value="0.9">0.9</option>
                    <option value="1">1</option>
                </field>
                <field name="blog_changefreq" type="list" default="-1" label="Blog Post Change frequency" description="Set the change frequency for blog post links">
                    <option value="-1">Use Parent Menu Settings</option>
                    <option value="always">Always</option>
                    <option value="hourly">Hourly</option>
                    <option value="daily">Daily</option>
                    <option value="weekly">Weekly</option>
                    <option value="monthly">Monthly</option>
                    <option value="yearly">Yearly</option>
                    <option value="never">Never</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>